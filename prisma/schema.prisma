generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @default(uuid())
  username String @unique
  email String @unique
  password  String
  admin Boolean 
  posts Post[]
  createdAt DateTime  @default(now())
}

model Post{
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  imageUrl  String
  caption   String
  lat       Float?    // latitude
  lng     Float?    // longitude
  color Color?
  size  Size?
  age Age?
  mood Mood?
  createdAt DateTime @default(now())
}

// add enums
enum Color{
  BLACK
  ORANGE
  GRAY
  WHITE
  MIXED
  BROWN
  TABBY
  CALICO
  TORTOISESHELL
}

enum Mood{
  FRIENDLY
  SCARED
  CURIOUS
  PLAYFUL
  ANGRY
  SLEEPY
  ALERT
}

enum Size{
  SMALL
  MEDIUM
  LARGE
  CHONKY
}

enum Age{
  KITTEN
  ADULT
  SENIOR
}

